<div class="top-wrapper">
  </br>
    <h1 class="headline">求職者ログインページ</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<table class="company">
        <colgroup>
    			<col width="40%">
    			<col width="60%">
       	</colgroup>
        <tr>
					<th class="arrow_box">ログインアドレス</th>
					<td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
				</tr>
        		<tr>
					<th class="arrow_box">パスワード</th>
					<td><%= f.password_field :password, autocomplete: "off" %></td>
				</tr>
				<tr>
					<td colspan="2">
					        <% if devise_mapping.rememberable? -%>
                                     <%= f.check_box :remember_me %>
                                    <%= f.label :remember_me %>
                            <% end -%>
					</td>
				</tr>
				<tr>
									<td colspan="2"> <%= f.submit "ログイン" %></td>
				</tr>
</table>
<% end %>

<%= render "users/shared/links" %>

</div>
